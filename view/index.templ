package view

import "github.com/mrmissx/stashbin/view/layout"

templ Home() {
	@layout.BaseLayout() {
		@layout.Header()
		<main>
			<textarea
				class="w-full h-[calc(100vh-6rem)] px-6 py-4 resize-none bg-secondary text-editor"
				name="content"
				placeholder="Write or paste, save and share the link..."
			></textarea>
		</main>
		@layout.Footer()
	}
}
